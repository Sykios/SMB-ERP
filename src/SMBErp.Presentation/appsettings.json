{
  "ConnectionStrings": {
    "DefaultConnection": "DataSource=app.db;Cache=Shared"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
      "Microsoft.AspNetCore.Hosting.Diagnostics": "Information",
      "Microsoft.AspNetCore.Mvc.RazorPages.Infrastructure": "Warning",
      "Microsoft.AspNetCore.Authorization": "Information"
    },
    "Console": {
      "LogLevel": {
        "Default": "Information"
      }
    },
    "File": {
      "LogLevel": {
        "Default": "Information"
      },
      "Path": "Logs/smberp-.txt",
      "RollingInterval": "Day",
      "RetainedFileCountLimit": 30
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Https": {
        "Url": "https://localhost:5001"
      },
      "Http": {
        "Url": "http://localhost:5000"
      }
    }
  },
  "Security": {
    "RequireHttps": true,
    "HstsMaxAge": 31536000,
    "EnableSecurityHeaders": true,
    "CookieSecurePolicy": "Always",
    "CookieSameSite": "Strict",
    "EnableCsp": true,
    "EnableXFrameOptions": true,
    "EnableXContentTypeOptions": true
  },
  "SmtpSettings": {
    "Server": "",
    "Port": 587,
    "EnableSSL": true,
    "Username": "",
    "Password": "",
    "FromEmail": "",
    "FromName": ""
  },
  "CompanySettings": {
    "Name": "Ihr Firmenname",
    "Street": "Musterstraße 123",
    "ZipCode": "12345",
    "City": "Musterstadt",
    "Country": "Österreich",
    "Phone": "+43 xxx xxxxxxx",
    "Email": "info@ihrefirma.at",
    "Website": "www.ihrefirma.at",
    "BankName": "Musterbank",
    "IBAN": "ATxx 0000 0000 0000 0000",
    "BIC": "COBADEFFXXX"
  },
  "InvoiceSettings": {
    "NumberPrefix": "RG",
    "StartNumber": 1,
    "YearlyReset": true,
    "DefaultPaymentTermDays": 14,
    "DefaultVatRate": 19.0,
    "Currency": "EUR",
    "CurrencySymbol": "€"
  },
  "ApplicationSettings": {
    "DefaultLanguage": "de-DE",
    "DateFormat": "dd.MM.yyyy",
    "TimeFormat": "HH:mm",
    "MaxFileUploadSizeMB": 10,
    "SessionTimeoutMinutes": 60,
    "MaxLoginAttempts": 5,
    "LockoutDurationMinutes": 15,
    "EnableAuditLogs": true,
    "EnablePerformanceMonitoring": false
  }
}
